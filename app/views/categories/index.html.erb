<div class="well list">
	<h1>
		<small>
			Listing categories
			<%= link_to 'New Category', new_category_path , :class => "btn btn-info pull-right"%>		
		</small>
	</h1><br>
	<ul class="thumbnails">
	<% @categories.each do |category| %>
		<li class="span3">
          <div class="thumbnail">
            <div class="caption">
              <h5><%= category.name %></h5>
			  <p><%= category.description %></p>
			  <p> 	
					<%= link_to 'Show', category %> |
					<%= link_to 'Edit', edit_category_path(category), :class => "" %> |
					<%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class => "" %>
			  </p>
            </div>
          </div>
        </li>
	<% end %>
	</ul>	
</div>

